<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <title>@ViewBag.Title - Retail OCR</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style>
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: darkgray;
            color: white;
            text-align: center;
        }

        .thumbnail {
            position: relative;
            overflow: hidden;
        }

        .caption {
            position: absolute;
            top: 0;
            right: 0;
            background: rgba(66, 139, 202, 0.75);
            width: 100%;
            height: 100%;
            padding: 2%;
            display: none;
            text-align: center;
            color: #fff !important;
        }
    </style>


</head>

<body style="padding-top: 00px;padding-bottom: 00px">
    <h5 id="backimage" style="background-image: url('whiteside_Wondershare.jpg');background-repeat: no-repeat; background-size: cover;height:900px;" />

    <div class="dropdown" style="float:right;color:dodgerblue">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" style="width:150px;">
            Choose Theme
        </button>
        <div class="dropdown-menu" style="font-size:17px">
            <a class="dropdown-item" href="#" id="theme1" style="color:red">Theme 1</a>
            <a class="dropdown-item" href="#" id="theme2" style="color:darkblue">Theme 2</a>
            <a class="dropdown-item" href="#" id="theme3" style="color:rebeccapurple">Theme 3</a>
            @*<div class="dropdown-divider"></div>*@
            <a class="dropdown-item" href="#" id="theme4" style="color:darkorange">Theme 4</a>
        </div>
    </div>
    <div style="height:80px"></div>

    @*<h4 class="my-0 mr-md-auto font-weight-normal">*@

    <div class="container body-content" id="mainframe">

        @RenderBody()
        <footer></footer>
    </div>



    <script>
        $("[rel='tooltip']").tooltip();

        $('.thumbnail').hover(
            function () {
                $(this).find('.caption').slideDown(250); //.fadeIn(250)
            },
            function () {
                $(this).find('.caption').slideUp(250); //.fadeOut(205)
            }
        );
    </script>
    <script>
        $(document).ready(function () {
            $("#theme1").click(function () {
                $("#backimage").css("background-image", "url('whiteboth_Wondershare.jpg')");
            });
        });
        $(document).ready(function () {
            $("#theme2").click(function () {
                $("#backimage").css("background-image", "url('veg23.jpg')");
            });
        });
        $(document).ready(function () {
            $("#theme3").click(function () {
                $("#backimage").css("background-image", "url('whiteright_Wondershare.jpg')");
            });
        });
        $(document).ready(function () {
            $("#theme4").click(function () {
                $("#backimage").css("background-image", "url('blue.png')");
            });
        });
    </script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>




